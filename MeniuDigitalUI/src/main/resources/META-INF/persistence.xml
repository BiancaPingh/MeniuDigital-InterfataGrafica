<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="RestaurantPU" transaction-type="RESOURCE_LOCAL">
        <class>unitbv.devops.meniudigitalui.entity.User</class>
        <class>unitbv.devops.meniudigitalui.entity.UserRole</class>
        <class>unitbv.devops.meniudigitalui.entity.Masa</class>
        <class>unitbv.devops.meniudigitalui.entity.Categorie</class>
        <class>unitbv.devops.meniudigitalui.entity.Produs</class>
        <class>unitbv.devops.meniudigitalui.entity.Mancare</class>
        <class>unitbv.devops.meniudigitalui.entity.Bauturi</class>
        <class>unitbv.devops.meniudigitalui.entity.Comanda</class>
        <class>unitbv.devops.meniudigitalui.entity.ComandaItem</class>

        <properties>
            <!-- PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/restaurant_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1q2w3e"/>

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
